function bottles(n)
  bottle = "bottle";
  ofbeer = "of beer";
  wall = "on the wall";
  for i = n:-1:0
    if ( i == 1 )
      s = "";
    else
      s = "s";
    endif
    for j = 0:1
      w = wall;
      if ( j == 1 )
	w = "";
      endif
      printf("%d %s%s %s %s\n",\
	     i, bottle, s, ofbeer, w);
    endfor
    printf("Take one down, pass it around\n");
  endfor
endfunction

bottles(99);
