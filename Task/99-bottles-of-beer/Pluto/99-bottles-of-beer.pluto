function pl(n) return n==1?"":"s" end

function fmt(s)
  return $"{s} bottle{pl(s)} of beer on the wall, \n" ..
         $"{s} bottle{pl(s)} of beer. \n" ..
         $"Take one down, pass it around, \n" ..
         $"{s-1} bottle{pl(s-1)} of beer on the wall.\n\n"
end

for i = 99, 1, -1 do
    print(fmt(i))
end
