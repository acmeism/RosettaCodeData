define bootles(n);
    while n > 0 do
        printf(n, '%p bottles of beer on the wall\n');
        printf(n, '%p bottles of beer\n');
        printf('Take one down, pass it around\n');
        n - 1 -> n;
        printf(n, '%p bottles of beer on the wall\n');
    endwhile;
enddefine;

bootles(99);
