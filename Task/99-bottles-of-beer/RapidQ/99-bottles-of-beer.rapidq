dim nBott as integer
    nBott = 99

While nBott > 0
   Print(str$(nBott ) + " bottle" + iif(nBott=1, "", "s") + " of beer on the wall")
   Print(str$(nBott ) + " bottle" + iif(nBott=1, "", "s") + " of beer")
   Print("Take one down, pass it around")
