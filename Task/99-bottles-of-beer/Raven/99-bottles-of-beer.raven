99 0 1 range each as $i
    $i 1 = if
        "bottle" as $b
    else
        "bottles" format as $b
    $b $i "%d %s of beer on the wall,\n" print
    $b $i "%d %s of beer,\n" print
    "Take one down, pass it around,\n" print
    $i 2 = if
        "1 bottle"
    else
         $i 1 - "%d bottles" format
    "%s of beer on the wall.\n\n" print
