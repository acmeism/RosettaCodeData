import extensions;

extension op
{
    average()
    {
        real sum := 0;
        int count := 0;

        var enumerator := self.enumerator();

        while (enumerator.next())
        {
            sum += enumerator.get();
            count += 1;
        };

        ^ sum / count
    }
}

public program()
{
    var array := new int[]{1, 2, 3, 4, 5, 6, 7, 8};
    console.printLine(
        "Arithmetic mean of {",array.asEnumerable(),"} is ",
        array.average()).readChar()
}
