PROGRAM CLASS2_DEMO

CLASS QUADRATO

    LOCAL LATO

    PROCEDURE GETLATO(L)
       LATO=L
    END PROCEDURE

    PROCEDURE AREA(->A)
       A=LATO*LATO
    END PROCEDURE

    PROCEDURE PERIMETRO(->P)
       P=4*LATO
    END PROCEDURE

END CLASS

NEW P:QUADRATO,Q:QUADRATO

BEGIN
    P_GETLATO(10)
    P_AREA(->AREAP)
    PRINT(AREAP)
    Q_GETLATO(20)
    Q_PERIMETRO(->PERIMETROQ)
    PRINT(PERIMETROQ)
END PROGRAM
