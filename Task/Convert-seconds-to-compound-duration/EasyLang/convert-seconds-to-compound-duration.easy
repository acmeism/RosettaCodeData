proc split sec . s$ .
  divs[] = [ 60 60 24 7 ]
  n$[] = [ "sec" "min" "hr" "d" "wk" ]
  len r[] 5
  for i = 1 to 4
    r[i] = sec mod divs[i]
    sec = sec div divs[i]
  .
  r[5] = sec
  s$ = ""
  for i = 5 downto 1
    if r[i] <> 0
      if s$ <> ""
        s$ &= ", "
      .
      s$ &= r[i] & " " & n$[i]
    .
  .
.
call split 7259 s$
print s$
call split 86400 s$
print s$
call split 6000000 s$
print s$
