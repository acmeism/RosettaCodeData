val d = fn(var sec) {
    [
        fw/wk d hr min sec/,
        for[=[]] dm in [7 * 24 * 60 * 60, 24 * 60 * 60, 60 * 60, 60] {
            _for ~= [sec \ dm]
            sec rem= dm
        } ~ [sec],
    ]
}

for seconds in [7259, 86400, 6000000] {
    val dur = d(seconds)
    write "{{seconds:7}} sec = "
    writeln join(", ", for[=[]] k of dur[1] {
        if dur[2][k] != 0: _for ~= ["{{dur[2][k]}} {{dur[1][k]}}"]
    })
}
