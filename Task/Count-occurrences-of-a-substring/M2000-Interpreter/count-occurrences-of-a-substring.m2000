module Count_occurrences_of_a_substring {
	print @countSubstring("the three truths","th")  '3
	print @countSubstring("ababababab","abab")  '2
	function countSubstring(a$, b$)
		local k=1, count
		do
			k=instr(a$, b$, k)
			if k<1 then exit
			count++
			k+=len(b$)
		always
		=count
	end function
}
Count_occurrences_of_a_substring
