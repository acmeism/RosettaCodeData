100 PROGRAM "StDev.bas"
110 LET N=8
120 NUMERIC ARR(1 TO N)
130 FOR I=1 TO N
140   READ ARR(I)
150 NEXT
160 DEF STDEV(N)
170   LET S1,S2=0
180   FOR I=1 TO N
190     LET S1=S1+ARR(I)^2:LET S2=S2+ARR(I)
200   NEXT
210   LET STDEV=SQR((N*S1-S2^2)/N^2)
220 END DEF
230 FOR J=1 TO N
240   PRINT J;"item =";ARR(J),"standard dev =";STDEV(J)
250 NEXT
260 DATA 2,4,4,4,5,5,7,9
