require "perm"
local int = require "int"
local fmt = require "fmt"

local ps = powerset.list(range(1, 9):reverse())
local desc_primes = ps:map(|a| -> tonumber(a:concat()))
                      :filter(|p| -> int.isprime(p))
                      :reorder()
                      :sort()
print($"There are {#desc_primes} descending primes, namely:")
fmt.tprint("%8d", desc_primes, 10)
