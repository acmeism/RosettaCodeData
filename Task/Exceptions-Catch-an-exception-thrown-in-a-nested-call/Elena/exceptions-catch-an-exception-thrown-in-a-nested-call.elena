import extensions;

class U0 : Exception
{
    constructor new()
        <= new();
}

class U1 : Exception
{
    constructor new()
        <= new();
}

singleton Exceptions
{
    static int i;

    bar()
        <= baz();

    baz()
    {
        if (i == 0)
        {
            U0.raise()
        }
        else
        {
            U1.raise()
        }
    }

    foo()
    {
        for(i := 0, i < 2, i += 1)
        {
            try
            {
                self.bar()
            }
            catch(U0 e)
            {
                console.printLine("U0 Caught")
            }
        }
    }
}

public program()
{
    Exceptions.foo()
}
