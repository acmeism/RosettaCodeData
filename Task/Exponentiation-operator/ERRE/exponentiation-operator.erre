PROGRAM POWER

PROCEDURE POWER(A,B->POW)   ! this routine handles only *INTEGER* powers
  LOCAL FLAG%
  IF B<0 THEN B=-B FLAG%=TRUE
  POW=1
  FOR X=1 TO B DO
    POW=POW*A
  END FOR
  IF FLAG% THEN POW=1/POW
END PROCEDURE

BEGIN
   POWER(11,-2->POW) PRINT(POW)
   POWER(Ï€,3->POW) PRINT(POW)
END PROGRAM
