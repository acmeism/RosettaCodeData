proc fairshare ind base . r .
   r = 0
   while ind > 0
      r = r + ind mod base
      ind = ind div base
   .
   r = r mod base
.
proc sequence n base . .
   write base & ": "
   for ind range0 n
      call fairshare ind base r
      write r & " "
   .
   print ""
.
call sequence 25 2
