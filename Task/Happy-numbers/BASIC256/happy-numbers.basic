function isHappy(num)
    isHappy = 0
    cont = 0
    while cont < 50 and isHappy <> 1
        num$ = string(num)
        cont += 1
        isHappy	= 0
        for i = 1 to length(num$)
            isHappy += int(mid(num$,i,1)) ^ 2
        next i
        num = isHappy
    end while
end function
