(do ;;; Horner's rule for polynominal evaluation

    ;;; returns the value of the polynominal defined by coefficients,
    ;;;         the coefficients should be in order with x^0 first, x^n last
    (fn Horner [coefficients x]
        (var xValue 0)
        (for [i (length coefficients) 1 -1]
             (set xValue (+ (* xValue x) (. coefficients i)))
        )
        xValue
    )

    (do ;;; task test case
        (local coefficients [-19 7 -4 6])
        (print (string.format "%8.2f" (Horner coefficients 3)))
    )
)
