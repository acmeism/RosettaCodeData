scope # Jewels and Stones - based on the Lua sample
    local count_jewels := proc( stones :: string, jewels :: string ) :: number is
        local count := 0;
        for i to size stones do
            count +:= size jewels @@ mfind( stones[ i ] ) # @@ is like : in Lua/Pluto
        od;
        return count
    end;
    io.write( count_jewels( "aAAbbbb", "aA" ), " ", count_jewels( "ZZ", "z" ), "\n" )
end
