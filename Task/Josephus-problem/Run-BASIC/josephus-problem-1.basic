n = 41
k = 3
print "n = "; n; "  k = "; k; "  final survivor = "; josephus(n, k, 0)
end

function josephus(n, k, m)
    lm = m
    for i = m + 1 to n
        ' In Run BASIC there is no MOD operator
        lm = lm + k
        lm = lm - int(lm / i) * i
        ' In Just Basic / Liberty BASIC it could be used
        'lm = (lm + k) mod i
    next i
    josephus = lm
end function
