100 PROGRAM "Letters.bas"
110 NUMERIC LETT(65 TO 90)
120 FOR I=65 TO 90
130   LET LETT(I)=0
140 NEXT
150 LET EOF=0
160 OPEN #1:"list.txt"
170 WHEN EXCEPTION USE IOERROR
180   DO
190     GET #1:A$
200     LET A$=UCASE$(A$)
210     IF A$>="A" AND A$<="Z" THEN LET LETT(ORD(A$))=LETT(ORD(A$))+1
220   LOOP UNTIL EOF
230 END WHEN
240 FOR I=65 TO 90
250   PRINT CHR$(I);":";LETT(I),
260 NEXT
270 HANDLER IOERROR
280   LET EOF=-1
290   CLOSE #1
300   CONTINUE
310 END HANDLER
