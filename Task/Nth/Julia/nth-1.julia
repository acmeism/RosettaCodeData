function sprintfordinal{T<:Integer}(n::T)
    const sfixes = ["st", "nd", "rd"]
    0 <= n || throw(ArgumentError("number to be formatted must be â‰¥ 0, got $n"))
    u = n%10
    t = div(n, 10)%10
    if 3 < u || u == 0 || t == 1
        sf = "th"
    else
        sf = sfixes[u]
    end
    @sprintf "%d%s" n sf
end
