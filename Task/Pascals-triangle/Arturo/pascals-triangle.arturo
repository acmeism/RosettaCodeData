pascalTriangle: function [n][
    triangle: new [[1]]

    loop 1..dec n 'x [
        'triangle ++ @[map couple (last triangle)++[0] [0]++(last triangle) 'x -> x\[0] + x\[1]]
    ]

    return triangle
]

loop pascalTriangle 10 'row [
    print pad.center join.with: " " map to [:string] row 'x -> pad.center x 5 60
]
