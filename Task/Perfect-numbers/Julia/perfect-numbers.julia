julia> function isperfect(n)
	n == sum([n % i == 0 ? i : 0 for i = 1:n-1])
end
# method added to generic function isperfect

julia> function perfects(n)
	a = ref(Int64)
	for i = 1:n
		isperfect(i) && push!(a,i)
	end
	return a
end
# method added to generic function perfects

