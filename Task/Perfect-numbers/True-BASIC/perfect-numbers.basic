FUNCTION perf(n)
    IF n < 2 or ramainder(n,2) = 1 then LET perf = 0
    LET sum = 0
    FOR i = 1 to n-1
        IF remainder(n,i) = 0 then LET sum = sum+i
    NEXT i
    IF sum = n then
       LET perf = 1
    ELSE
       LET perf = 0
    END IF
END FUNCTION

