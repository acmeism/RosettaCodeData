val .perfectsquare = f isInteger .n ^/ 2

val .israre = f(.n) {
    val .r = reverse(.n)
    if .n == .r: return false
    val .sum = .n + .r
    val .diff = .n - .r
    .diff > 0 and .perfectsquare(.sum) and .perfectsquare(.diff)
}

val .findfirst = f(.max) {
    for[=[]] .i = 0; ; .i += 1 {
        if .israre(.i) {
            _for ~= [.i]
            if len(_for) == .max: break
        }
    }
}

# if you have the time...
writeln "the first 5 rare numbers: ", .findfirst(5)
