len isdiv[] 1000035
proc sieve . .
   max = sqrt len isdiv[]
   for d = 2 to max
      if isdiv[d] = 0
         for i = d * d step d to len isdiv[]
            isdiv[i] = 1
         .
      .
   .
.
sieve
