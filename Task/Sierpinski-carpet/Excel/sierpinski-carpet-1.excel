SHOWBLOCKS
=LAMBDA(xs,
    IF(0 <> xs, "â–ˆ", " ")
)


SIERPCARPET
=LAMBDA(n,
    APPLYN(n)(
        SIERPWEAVE
    )(1)
)


SIERPWEAVE
=LAMBDA(xs,
    LET(
        triple, REPLICATECOLS(3)(xs),
        gap, LAMBDA(x, IF(x, 0, 0))(xs),
        middle, APPENDCOLS(
            APPENDCOLS(xs)(gap)
        )(xs),

        APPENDROWS(
            APPENDROWS(triple)(middle)
        )(triple)
    )
)
