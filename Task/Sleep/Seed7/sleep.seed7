$ include "seed7_05.s7i";
  include "duration.s7i";

const proc: main is func
  local
    var integer: secondsToSleep is 0;
  begin
    write("Enter number of seconds to sleep: ");
    readln(secondsToSleep);
    writeln("Sleeping...");
    wait(secondsToSleep . SECONDS);
    writeln("Awake!");
  end func;
