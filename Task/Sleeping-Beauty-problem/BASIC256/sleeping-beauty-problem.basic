iteraciones = 1000000
cara = 0
dormir = 0

for i = 1 to iteraciones
	lanza_moneda = int(rand * 2)
	dormir = dormir + 1
	if lanza_moneda = 1 then
		cara = cara + 1
	else
		dormir = dormir + 1
	end if
next i

print "Wakings over "; iteraciones; " repetitions = "; dormir
print "Percentage probability of heads on waking = "; (cara/dormir*100); "%"
end
