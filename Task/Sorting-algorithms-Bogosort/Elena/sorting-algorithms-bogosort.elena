import extensions;
import system'routines;

extension op
{
    bogoSorter()
    {
        var list := self;

        until (list.isAscendant())
        {
            list := list.randomize(list.Length)
        };

        ^ list
    }
}

public program()
{
    var list := new int[]{3, 4, 1, 8, 7, -2, 0};

    console.printLine("before:", list.asEnumerable());
    console.printLine("after :", list.bogoSorter().asEnumerable())
}
