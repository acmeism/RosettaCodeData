mergeSortBy : (i ->{ð•–} i ->{ð•–} Boolean) ->{ð•–} [i] ->{ð•–} [i]
mergeSortBy cmp =
  merge l1 l2 =
    match (l1, l2) with
      (xs, [])           -> xs
      ([], ys)           -> ys
      (x +: xs, y +: ys) -> if cmp x y then x +: merge xs l2 else y +: merge l1 ys
      ([], [])           -> []
  cases
    []  -> []
    [x] -> [x]
    lst ->
      match halve lst with
        (left, right) -> merge (mergeSortBy cmp left) (mergeSortBy cmp right)
