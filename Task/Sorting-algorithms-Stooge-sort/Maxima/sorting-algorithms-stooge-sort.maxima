stoogesort(list, i, j) := block(
if(list[j]<list[i]) then block(a: list[j], b: list[i], list[i]: a, list[j]:b),
if(j-i>1) then block(
    t: floor((j-i+1)/3),
    stoogesort(list, i, j-t),
    stoogesort(list, i+t, j),
    stoogesort(list, i, j-t)),
list)$

test_list: makelist(random(21),20);

stooge(list) := stoogesort(list, 1, length(list))$

stooge(test_list);
