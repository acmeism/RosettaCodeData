local int = require("int")
local fmt = require("fmt")

local tests = { {1, 10}, {1234, 10}, {0xfe, 16}, {0xf0e, 16}, {1411, 8}, {111, 3} }
print("The sum of the digits is: ")
for tests as test do
    local [n, b] = test
    local sum = int.digstat(n, b)[2]
    fmt.print("%-5s in base %2d = %2d", fmt.itoa(n, b), b, sum)
end
