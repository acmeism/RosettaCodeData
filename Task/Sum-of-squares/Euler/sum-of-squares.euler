begin
   new i; new A; new sum;
   sum <- ` formal i; formal lo; formal hi; formal term;
            begin
                new temp; label loop;
                temp <- 0;
                i    <- lo;
loop:           begin
                    temp <- temp + term;
                    if [ i <- i + 1 ] <= hi then goto loop else 0
                end;
                temp
            end
          ';

   A <- ( 1, 2, 3, 4, 5 );
   out sum( @i, 1, length A, `A[i]*A[i]' )
end $
