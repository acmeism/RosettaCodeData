: KtoC \ n -- n
	273.15 n:-
;

: KtoF \ n -- n
	1.8 n:* 459.67 n:-
;

: KtoR \ n -- n
	1.8 n:*
;

: KtoCFR \ n --
	dup dup dup
	. " degrees Kelvin" . cr
	KtoC
	. " degrees Celcius" . cr
	KtoF
	. " degrees Fahrenheit" . cr
	KtoR
	. " degrees Rankine" . cr
;

: app:main \
	argc 0 n:=
	if
		"Syntax" . cr "    temp.8th number" . cr
	else
		0 args >n KtoCFR
	then
	bye
;
