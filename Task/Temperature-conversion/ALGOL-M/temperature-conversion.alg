BEGIN
    DECIMAL K, C, F, R;
    WRITE( "Temperature in Kelvin:" );
    READ( K );
    C := K - 273.15;
    F := K * 1.8 - 459.67;
    R := K * 1.8;
    WRITE( K, " Kelvin is equivalent to" );
    WRITE( C, " degrees Celsius" );
    WRITE( F, " degrees Fahrenheit" );
    WRITE( R, " degrees Rankine" );
END
