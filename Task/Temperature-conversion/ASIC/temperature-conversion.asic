REM Temperature conversion
PRINT "Kelvin degrees";
INPUT K@
WHILE K@ >= 0
  C@ = K@ - 273.15
  R@ = K@ * 1.8
  F@ = R@ - 459.67
  CLS
  PRINT K@;
  PRINT " Kelvin is equivalent to"
  PRINT C@;
  PRINT " degrees Celsius,"
  PRINT F@;
  PRINT " degrees Fahrenheit,"
  PRINT R@;
  PRINT " degrees Rankine."
  PRINT "Kelvin degrees";
  INPUT K@
WEND
END
