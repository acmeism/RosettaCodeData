fcn printVerse(name){
   z,x := name[0].toLower(), z.toUpper() + name[1,*].toLower();
   y:=( if("aeiou".holds(z)) name.toLower() else x[1,*] );
   b,f,m := T("b","f","m").apply('wrap(c){ z==c and y or c+y });
   println("%s, %s, bo-%s".fmt(x,x,b));
   println("Banana-fana fo-",f);
   println("Fee-fi-mo-",m);
   println(x,"!\n");
}
