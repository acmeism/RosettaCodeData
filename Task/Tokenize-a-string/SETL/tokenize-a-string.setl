program tokenize_a_string;
    s := 'Hello,How,Are,You,Today';
    loop for part in tokenize(',', s) do
        nprint(part + ". ");
    end loop;
    print;

    proc tokenize(sep, s);
        loop
            init parts := [];
            doing parts with:= break(s, sep);
            while s /= ""
        do
            s := s(2..);
        end loop;
        return parts;
    end proc;
end program;
