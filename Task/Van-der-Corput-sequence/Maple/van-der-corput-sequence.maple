Halton:=proc(n,b)
  local i:=n,k:=1,s:=0,r;
  while i>0 do
    k/=b;
    i:=iquo(i,b,'r');
    s+=k*r
  od;
  s
end;

map(Halton,[$1..10],2);
# [1/2, 1/4, 3/4, 1/8, 5/8, 3/8, 7/8, 1/16, 9/16, 5/16]

