proc water h[] . .
   n = len h[]
   len left[] n
   len right[] n
   for i = 1 to n
      max = higher max h[i]
      left[i] = max
   .
   max = 0
   for i = n downto 1
      max = higher max h[i]
      right[i] = max
   .
   for i = 1 to n
      sum += (lower left[i] right[i]) - h[i]
   .
   print sum
.
repeat
   s$ = input
   until s$ = ""
   call water number strsplit s$ " "
.
