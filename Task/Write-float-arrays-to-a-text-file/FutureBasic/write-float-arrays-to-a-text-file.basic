      MutableStringAppendString( mutStr, s )
      s = fn StringWithFormat( @"%.4e\n", fn NumberFloatValue( y[i] ) )
      MutableStringAppendString( mutStr, s )
    end if
  next
  fn StringWriteToURL( mutStr, url, YES, NSUTF8StringEncoding, NULL )
  print mutStr
